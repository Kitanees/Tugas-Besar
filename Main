int main(){

    LoadGame();
    menu :
        DisplayMenu();
        switch(InputMenu()){
            case 1 : StartGame(); break;
            case 2 : HighScores(); break;
            case 3 : Help(); break;
            case 4 : AboutAuthor(); break;
            case 5 : exitGame(); break;
            default :
                printf("WRONG INPUT NUMBER.\n");
                printf("Pilih nomer aja salah, apalagi pilih pasangan hidup -.-\n\n");
                system("pause");
                system("cls");
                goto menu;
        }

    return 0;
}

void LoadGame(){}

void DisplayMenu(){}

int InputMenu(){
    int x;

        scanf("%d", &x);

    return x;
}

void StartGame(){
    int enemy, level;

    enemy = ChooseEnemy();
    level = ChooseLevel();

    InGame(enemy, level);

}

